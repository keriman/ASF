        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <!-- Esta es la clave para hacer que el tema oscuro se aplique siempre -->
    <style name="Theme.ASFPedidos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brand_green</item>
        <item name="colorPrimaryVariant">@color/accent_green_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Forzar modo oscuro -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>
</resources>